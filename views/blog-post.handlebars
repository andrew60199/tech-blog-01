<section>
    <div>
        <div class="blog-header">
            <p class="invisible">{{blog.id}}</p>
            <h3>{{blog.title}}</h3>
            <h4 class="right">{{blog.username}}</h4>
            <p class="time">{{blog.timestamp}}</p> 
        </div>
        <p class="content">{{blog.content}}</p>

        <div class="line"></div>
        <h5 class="padding">Comments</h5>

        {{#each blog.comments}}
        {{> comment}}
        {{/each}}

        <div id="new-comment" class="comment">
            <p id="new-time" class="time"></p>
            <div class="flex">
                <h6>{{username}}</h6>
                <p id="new-content"></p>
            </div>
        </div>
        
        {{#if logged_in}}
        <form id="comment-form">
            <p id="message3"></p>
            <div class="comment-form">
                <textarea class="comment-textarea" type="text" id="user-comment" placeholder="Write a comment here" required/></textarea>
            </div>
            <div class="comment-form flex right">
                <button class="comment-button" type="submit">Reply</button>
            </div>
        </form>
        {{/if}}
    </div>
</section>

